#!/bin/sh

GIT=git
TODAY="$(date +%Y-%m-%d)"
LOG=df7cb-upload.adif

while getopts "fn" opt ; do
  case $opt in
    f) FLDIGI="fldigi" ;;
    n) GIT="" ;;
    *) exit 5 ;;
  esac
done
# shift away args
shift $((OPTIND - 1))

set -eu

git pull --ff-only

( set -x

  cd wsjtx
  ./import

  cd ../js8
  ./import

  if [ ${FLDIGI:-} ]; then
    cd ../fldigi
    ./import logbook.adif
  fi

  cd ../lotw
  STAMP=$(cat .upload.stamp || echo 'today')
  ./export-adif $LOG $STAMP
  ./tqsl-upload $STAMP
  ./clublog-upload $LOG
  ./dcl-upload $LOG
  ./eqsl-upload $LOG
  ./rrdxa-upload $LOG
  echo "$TODAY" > .upload.stamp
  ./lotw_download

  cd ../sql
  ./dump
)

if [ "$GIT" ]; then
  git add -u
  git commit -m "Log upload"
  git push
fi
