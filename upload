#!/bin/sh

GIT=git
TODAY="$(date +%Y-%m-%d)"
LOG=df7cb-upload.adif

while getopts "n" opt ; do
  case $opt in
    n) GIT="" ;;
    *) exit 5 ;;
  esac
done
# shift away args
shift $((OPTIND - 1))

#trap "ssh feynman.df7cb.de -O exit" EXIT

set -eu

git pull --ff-only

ssh feynman.df7cb.de sleep 60 &
sleep 1

( set -x

  cd wsjtx
  ./import

  cd ../js8
  ./import

  cd ../fldigi
  ./import logbook.adif

  cd ../lotw
  STAMP=$(cat .upload.stamp || echo 'today')
  ./export-adif $LOG $STAMP
  ./tqsl-upload $STAMP
  ./clublog-upload $LOG
  ./dcl-upload $LOG
  ./eqsl-upload $LOG
  echo "$TODAY" > .upload.stamp
  ./lotw_download

  cd ../sql
  ./dump
)

if [ "$GIT" ]; then
  git add -u
  git commit -m "Log upload"
  git push
fi
