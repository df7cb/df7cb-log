#!/usr/bin/python3

from decimal import Decimal
import getopt
import re
import sys
import psycopg2

opts, args = getopt.getopt(sys.argv[1:], "c:e:lm:n")
comment = None
mycall = None
noop = False

extx = None
logtable = "log"

for o, a in opts:
    if o == '-c':
        comment = a
    elif o == '-e':
        extx = a
    elif o == '-l':
        logtable = "livelog"
    elif o == '-m':
        mycall = a
    elif o == '-n':
        noop = True
    else:
        assert False, "Unknown option %s" % (o)

if not noop:
    conn = psycopg2.connect("service=cb")
    cur = conn.cursor()

    # empty livelog since we are loading the real log now
    cur.execute("delete from livelog")

#40CW  14-Apr-19 08:11 0002  LY3B           599  599  29            LY   29  0   7029.1

log = []
laststart = ''
with open(args[1]) as f:
  for line in f:

    # ; comment, append to last qso
    if line[0] == ';':
        if line[2:6] == 'via ':
            log[-1]['qsl_via'] = line[6:].rstrip().upper()
        else:
            log[-1]['comment'] = line[2:].rstrip()
        continue

    if line[23] != '0':
        raise Exception('serial does not start with 0')

    qso = {
            #'mytrx': 'IC7610',
            #'mytrx': 'IC706',
            #'mypwr': 100,
            #'myant': 'Windom',
            #'myloc': 'JO31HI',
            #'myqth': 'Krefeld',
            'contest': args[0], # contest name
            }

    if mycall: qso['mycall'] = mycall
    if comment: qso['comment'] = comment

    qso['mode'] = line[3:6].rstrip()
    qso['start'] = line[7:22] # date+time
    if laststart == qso['start']: # 2nd QSO in this minute
        qso['start'] += ':15'
    elif laststart == qso['start'] + ':15': # 3rd QSO in this minute
        qso['start'] += ':30'
    elif laststart == qso['start'] + ':30': # 4th QSO in this minute
        qso['start'] += ':45'
    laststart = qso['start']
    qso['call'] = line[29:43].rstrip()
    qso['qrg'] = Decimal(line[79:87]) / 1000

    rsttx = line[44:47].rstrip()
    serial = line[24:27]
    rstrx = line[49:52].rstrip()
    exchange = line[54:67].strip()

    # my rst:
    qso['rsttx'] = rsttx
    if extx:
        qso['extx'] = extx
    else:
        qso['extx'] = serial
        #qso['extx'] = f"{serial} R10"

    # their rst:
    qso['rstrx'] = rstrx
    qso['exrx'] = exchange

    # extract CQ zone
    #qso['cq'] = exchange
    # extract ITU zone
    #if m := re.search('\\b([0-9]{1,2})\\b', exchange):
    #    qso['itu'] = int(m.group(1))
    #qso['itu'] = exchange

    # extract dok from exchange
    if qso['call'][0] == 'D' and (m := re.search('\\b([A-Z][0-9]{2})\\b', exchange)):
        qso['dok'] = m.group(1)

    # extract locator from exchange
    if m := re.search('([A-R]{2}[0-9]{2}(?:[A-X]{2})?)$', exchange):
        qso['loc'] = m.group(1)

    log.append(qso)

for qso in log:
    for field in qso:
        print(f"{field} \033[1m{qso[field]}\033[0m", end=" ")
    print()

    if not noop:
        insert = "INSERT INTO " + logtable + " (" + \
            ', '.join(qso.keys()) + \
            ') VALUES (' + \
            ', '.join(['%s' for x in qso]) + \
            ')'
        args = [x for x in qso.values()]
        cur.execute(insert, args)

if not noop:
    conn.commit()
