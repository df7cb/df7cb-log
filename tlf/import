#!/bin/sh

PATH=$PATH:$(dirname $0)

CONTEST="${1:-OK1WC Memorial Contest}"
LOG="${2:-$(date +%F)-ok1wc.log}"
CBR="${LOG%.*}.cbr"

[ -f "$LOG" ] || mv contest.log "$LOG"

set -eux

./import-tlf -n "$CONTEST" < $LOG
read ok
./import-tlf "$CONTEST" < $LOG

# add address and category info, remove decimal part of frequencies
export-cabrillo "$CONTEST" "$CBR"
sed -i \
  -e '/^CALLSIGN:/ a \
NAME: Christoph Berg\
EMAIL: cb@df7cb.de\
ADDRESS: Rather Str. 76a\
ADDRESS: 47802 Krefeld\
ADDRESS: Germany\
GRID-LOCATOR: JO31HI\
CLUB: Rhein Ruhr DX Association' \
  -e '/^CONTEST:/ a \
CATEGORY-ASSISTED: NON-ASSISTED\
CATEGORY-BAND: ALL\
CATEGORY-MODE: CW\
CATEGORY-OPERATOR: SINGLE-OP\
CATEGORY-POWER: LOW\
CATEGORY-STATION: FIXED\
CATEGORY-TRANSMITTER: ONE' \
  -e '/^QSO:/ s/\.[0-9]* / /' \
  $CBR

# fix missing trailing newline
echo >> $CBR

vi $CBR
git add $LOG $CBR
v commit -m "$CONTEST" --edit
