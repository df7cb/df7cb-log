#!/bin/sh

set -eu

PATH=$PATH:$(dirname $0):$(dirname $0)/../bin

while getopts "c:e:" opt ; do
    case $opt in
        c) CONTEST="$OPTARG" ;;
        e) EXTX="$OPTARG" ;;
        *) exit 5 ;;
    esac
done
# shift away args
shift $(($OPTIND - 1))

: ${CONTEST:=MWC}
: ${EXTX:="#"}

LOG="${1:-$(date +%F)-$(echo $CONTEST | tr 'A-Z/ ' 'a-z__').log}"
CBR="${LOG%.*}.cbr"

[ -f "$LOG" ] || mv contest.log "$LOG"

set -eux

import-tlf ${EXTX:+-e "$EXTX"} -n "$CONTEST" "$LOG"
read ok
import-tlf ${EXTX:+-e "$EXTX"} "$CONTEST" "$LOG"

git add $LOG
export-cabrillo "$CONTEST" "$CBR"
vi $CBR
git add $CBR
v commit -m "$CONTEST" --edit
